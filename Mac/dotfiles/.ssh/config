Include ~/.ssh/config.local

Host *.redhat.com
  GSSAPIAuthentication yes
  GSSAPIDelegateCredentials no
  # https://mojo.redhat.com/docs/DOC-1069454 says never delegate credentials
# Podman RHEL vm connection
Host rhel-vm
  User core
  HostName localhost
  IdentityFile /Users/jaryan/.local/share/containers/macadam/machine/machine
  # This command asks macadam directly for the port of the first running VM
  ProxyCommand sh -c "PORT=\$(/opt/macadam/bin/macadam inspect rhel-rhel-10-podman-machine | grep -o '\"Port\": *[0-9]*' | grep -o '[0-9]*' | head -n 1); nc localhost \$PORT"
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
